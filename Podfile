  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Shopping
shared_pods
pod 'Stripe'
pod 'Alamofire'

end

target 'ShoppingAdmin' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for ShoppingAdmin
